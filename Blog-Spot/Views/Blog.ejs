<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./Partials/Head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./Partials/Navbar') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <br><br>
        <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50px">
        <h4><%= blog.createdBy.fullName %></h4>
    </div>

    <div class="container mt-3">
        <h1>Comments(<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control mb-3" placeholder="Enter Your Comments">
                    <button type="submit" class="btn btn-primary">Add Comment</button>
                </div>
            </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" alt="">
                <%= comment.createdBy.fullName %> : <pre> <%= comment.content %> </pre>
            <% }) %>
        </div>
    </div>


    <%- include('./Partials/Scripts') %>
</body>
</html>